    public voidstart() {
  </p>
  
  <p>
    if (socket== null) {<br /> throw newIllegalStateException(<br /> &#8220;Cannotstart proxy; it has not been initialized.&#8221;);<br /> }
  </p>
  
  <p>
    thread = newThread(this);<br /> thread.start();<br /> }
